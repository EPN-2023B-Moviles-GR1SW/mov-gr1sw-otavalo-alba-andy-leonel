<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/form_create_cancion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCancionActivity">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Cancion"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />





        <EditText
            android:id="@+id/input_id_c"
            android:layout_width="273dp"
            android:layout_height="53dp"
            android:ems="10"
            android:hint="Ingrese el id"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.058" />

        <EditText
            android:id="@+id/input_nombre_c"
            android:layout_width="273dp"
            android:layout_height="53dp"
            android:ems="10"
            android:hint="Ingrese el nombre"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_id_c"
            app:layout_constraintVertical_bias="0.03" />

        <EditText
            android:id="@+id/input_duracion_c"
            android:layout_width="273dp"
            android:layout_height="53dp"
            android:ems="10"
            android:hint="Ingrese la duraciÃ³n"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_nombre_c"
            app:layout_constraintVertical_bias="0.053" />

        <CheckBox
            android:id="@+id/chk_colaborativa"
            android:layout_width="273dp"
            android:layout_height="53dp"
            android:layout_marginBottom="140dp"
            android:text="Colaborativa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_duracion_c"
            app:layout_constraintVertical_bias="0.128" />

        <EditText
            android:id="@+id/input_fecha_c"
            android:layout_width="273dp"
            android:layout_height="53dp"
            android:ems="10"
            android:hint="Fecha (dd/mm/aaaa)"
            android:inputType="datetime|date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chk_colaborativa"
            app:layout_constraintVertical_bias="0.077" />

        <Button
            android:id="@+id/btn_crear_cancion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.303"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input_fecha_c"
            app:layout_constraintVertical_bias="0.2" />

        <Button
            android:id="@+id/btn_back_create_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.226"
            app:layout_constraintStart_toEndOf="@+id/btn_crear_cancion"
            app:layout_constraintTop_toBottomOf="@+id/input_fecha_c"
            app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>